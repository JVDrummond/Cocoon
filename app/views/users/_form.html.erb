<div class="row">
  <div class="col m12">

    <%= form_with(model: user, local: true) do |form| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h4>"Experiences"</h4>

      <div id="experiences">
        <%= fields_for :experiences do |experience|%>
          <%= render 'experience_fields', f: experience %>
        <% end %>

        <div class="links">
          <%= link_to_add_association 'add experiences', form, :experiences %>
          <br><br>
        </div>
      </div>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>